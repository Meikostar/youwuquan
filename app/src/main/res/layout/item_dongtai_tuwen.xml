<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="351dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/item_dongtai_head" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ningchuang.youwuquan.view.NinePic.NineGridPicView
                    android:id="@+id/ninePic_dongtai_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp" />

                <ImageView
                    android:id="@+id/dashang_dongtai_pic"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/find_dashang" />

            </RelativeLayout>

            <com.lcodecore.extextview.ExpandTextView
                android:id="@+id/etv_dongtai_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ninePic_dongtai_pic"
                android:padding="20dp"
                android:lineSpacingExtra="3dp"
                android:text="少时诵诗书"
                android:textSize="12sp"
                app:arrowAlign="center"
                app:arrowPadding="8dp"
                app:arrowPosition="below"
                app:maxCollapsedLines="1" />

            <include layout="@layout/item_dongtai_foot" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

