<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
   >
    <com.zqd.common.base.NavigationBar
        android:id="@+id/navigationBar"
        app:navigationTitle="公开相册"
        android:layout_width="match_parent"
        app:navigationRight_img="@mipmap/del"
        app:navigationRight_type="img"
        android:layout_height="wrap_content"/>

    <com.ningchuang.youwuquan.view.ViewPagerFixed
        android:layout_below="@+id/navigationBar"
        android:id="@+id/image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

 <LinearLayout

     android:layout_alignParentBottom="true"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:textSize="12sp"
         android:paddingLeft="13.5dp"
         android:minHeight="35dp"
         android:background="#a1000000"
         android:textColor="@color/white"
         android:text="n你好我打开你的心烦，黑了你的小小可爱"
         android:gravity="center_vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
     <LinearLayout
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:background="#7f000000"
         android:layout_width="match_parent"
         android:layout_height="44dp">
         <TextView
             android:textSize="12sp"
             android:layout_marginLeft="13.5dp"
             android:minHeight="35dp"
             android:textColor="@color/white"
             android:text="2017年1月12"
             android:layout_weight="1"
             android:gravity="center_vertical"
             android:layout_width="0dp"
             android:layout_height="wrap_content" />

         <ImageView
             android:id="@+id/iv_love"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/comment" />
         <TextView
             android:id="@+id/tv_loves"
             android:layout_marginLeft="8dp"
             android:textSize="13sp"
             android:minHeight="35dp"
             android:textColor="@color/white"
             android:text="520"
             android:gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <ImageView
             android:id="@+id/iv_messages"
             android:layout_marginLeft="22dp"
             android:src="@mipmap/comment"
             android:layout_width="20dp"
             android:layout_height="18dp" />
         <TextView
             android:id="@+id/tv_messages"
             android:layout_marginRight="20dp"
             android:layout_marginLeft="8dp"
             android:textSize="13sp"
             android:minHeight="35dp"
             android:textColor="@color/white"
             android:text="520"
             android:gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>
 </LinearLayout>

</RelativeLayout>