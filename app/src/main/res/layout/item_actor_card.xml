<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:elevation="1dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_card_tou"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_card_select"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv_card_tou"
        android:text="选择该模板"
        android:layout_marginTop="320dp"
        android:textColor="@color/home_red"

        android:textSize="17sp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/iv_love"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:alpha="0"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_love"
        tools:alpha="255"
        />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:alpha="0"
        android:src="@drawable/icon_del"
        tools:alpha="255"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/normal_text_three"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>