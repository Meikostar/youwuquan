<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5f5f5"
    
    android:fitsSystemWindows="true"
    >
    <com.zqd.common.base.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationTitle="编辑技能" />

    <ImageView
        android:scaleType="fitXY"
        android:layout_below="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@mipmap/tu" />

<LinearLayout
    android:gravity="center_horizontal"
    android:background="@drawable/wite_rectangle"
    android:orientation="vertical"
    android:layout_marginTop="195dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp">
      <ImageView
          android:src="@mipmap/skill"
          android:layout_marginLeft="9dp"
          android:layout_width="22dp"
          android:layout_height="22dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技能名称"
            android:textColor="#fff72f5e"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff5f5f5"/>
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/time"
            android:layout_marginLeft="9dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <com.ningchuang.youwuquan.view.MarkaEditText
            android:layout_marginLeft="10dp"
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="时间(用户点击该区域即可编辑)."

            android:textSize="15sp"
            android:textColor="@color/slow_black" />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe6e6e6"
        />
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/site"
            android:layout_marginLeft="9dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <com.ningchuang.youwuquan.view.MarkaEditText
            android:layout_marginLeft="10dp"
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="地点"
            android:textSize="15sp"
            android:textColor="@color/slow_black" />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe6e6e6"
        />
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/price"
            android:layout_marginLeft="9dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <com.ningchuang.youwuquan.view.MarkaEditText
            android:layout_marginLeft="10dp"
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="价格"

            android:textSize="15sp"
            android:textColor="@color/slow_black" />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe6e6e6"
        />
    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/request"
            android:layout_marginLeft="9dp"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <com.ningchuang.youwuquan.view.MarkaEditText
            android:layout_marginLeft="10dp"
            android:textColorHint="#ffcccccc"
            android:id="@+id/et_requst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="要求"

            android:textSize="15sp"
            android:textColor="@color/slow_black" />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe6e6e6"
        />
    <TextView
        android:layout_marginBottom="70dp"
        android:id="@+id/tv_save"
        android:background="@drawable/button_choose_red"
        android:textSize="15sp"
        android:text="保存"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="314dp"
        android:layout_height="44dp" />
</LinearLayout>


</RelativeLayout>
