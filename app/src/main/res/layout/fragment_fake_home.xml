<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context="com.ningchuang.youwuquan.ui.home.fragment.FakeHomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_fake_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llt_fake_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/iv_home_tou"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@mipmap/home_test"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"

                >
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="新晋网红"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="17dp"

                    android:textSize="@dimen/normal_text_fourteen"
                    />
                  <RelativeLayout
                      android:id="@+id/rlt_home_wangh_more"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="12dp"
                      >
                      <TextView
                          android:id="@+id/tv_home_wangh_see"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="查看更多"
                          android:textSize="@dimen/normal_text_thirteen"
                          android:layout_centerVertical="true"
                          android:textColor="@color/home_red"
                          />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_toRightOf="@id/tv_home_wangh_see"
                           android:src="@mipmap/home_more"
                           android:layout_marginLeft="3dp"

                           />

                  </RelativeLayout>
            </RelativeLayout>


             <android.support.v7.widget.RecyclerView
                 android:id="@+id/rlv_home_wangh"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"

                >
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="新晋演员"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:background="#f4f4f4"
                    android:textSize="@dimen/normal_text_fourteen"
                    />
                <RelativeLayout
                    android:id="@+id/rlt_home_actor_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    >
                    <TextView
                        android:id="@+id/tv_home_actor_see"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textSize="@dimen/normal_text_thirteen"
                        android:layout_centerVertical="true"
                        android:textColor="@color/home_red"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_home_actor_see"
                        android:src="@mipmap/home_more"
                        android:layout_marginLeft="3dp"

                        />

                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_home_actor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"

                >
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="附近的人"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:background="#f4f4f4"
                    android:textSize="@dimen/normal_text_fourteen"
                    />
                <RelativeLayout
                    android:id="@+id/rlt_home_nearby_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    >
                    <TextView
                        android:id="@+id/tv_home_nearby_see"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textSize="@dimen/normal_text_thirteen"
                        android:layout_centerVertical="true"
                        android:textColor="@color/home_red"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_home_nearby_see"
                        android:src="@mipmap/home_more"
                        android:layout_marginLeft="3dp"

                        />

                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_home_nearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:layout_marginBottom="50dp"
                android:overScrollMode="never"
                android:background="@color/white"
                >

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
