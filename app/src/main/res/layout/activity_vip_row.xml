<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bj"
    >
    <RelativeLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/topview_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"

            >

            <ImageView
                android:id="@+id/top_view_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/back" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="富豪榜"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="19dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            >
            <FrameLayout
                android:layout_marginTop="14dp"
                android:background="@mipmap/second"
                android:layout_width="70dp"
                android:layout_height="86dp">
                <ImageView
                    android:src="@mipmap/me_tou1"
                    android:id="@+id/iv_second"
                    android:layout_marginTop="21dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_second"
                android:lines="2"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="豪靓女\n1234656"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            >
            <FrameLayout
                android:background="@mipmap/first"
                android:layout_width="80dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@mipmap/me_tou1"
                    android:id="@+id/iv_first"
                    android:layout_marginTop="25dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_marginLeft="5dp"
                     />
            </FrameLayout>
            <TextView

                android:id="@+id/tv_first"
                android:lines="2"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="负的流逝\n199656"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="19dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            >
            <FrameLayout
                android:layout_marginTop="14dp"
                android:background="@mipmap/thirdly"
                android:layout_width="70dp"
                android:layout_height="86dp">
                <ImageView
                    android:src="@mipmap/me_tou1"
                    android:id="@+id/iv_thrid"
                    android:layout_marginTop="21dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_third"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="豪靓女\n1234656"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_marginTop="15dp"
        android:background="@drawable/wite_rectangle_vip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/list_view"
        style="@style/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>
