<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5f5f5"
    android:fitsSystemWindows="true"
    >
    <com.zqd.common.base.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationTitle="每日任务" />
   <com.ningchuang.youwuquan.view.StickyScrollView
       android:layout_marginTop="11dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_content"
            android:background="@mipmap/neiron"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="50金币"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="完成（1/5）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="9dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="分享内容"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="做人不能自己享受，好内容当然要分享给朋友"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
           <LinearLayout
               android:id="@+id/ll_sign"
               android:background="@mipmap/neiron"
               android:layout_marginTop="4dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="110dp">
               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="50金币"
                       android:gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/tv_sign"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="完成（0/1）"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="9dp"
                   android:textColor="@color/white"
                   android:textSize="24sp"
                   android:text="每日签到"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="7dp"
                   android:textColor="@color/white"
                   android:textSize="13sp"
                   android:text="精彩的日子少不了尤物圈，尤物圈天天等你"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/ll_comment"
               android:background="@mipmap/neiron"
               android:layout_marginTop="4dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="110dp">
               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="50金币"
                       android:gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/tv_comment"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="已完成该任务"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="9dp"
                   android:textColor="@color/white"
                   android:textSize="24sp"
                   android:text="热心评论"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="7dp"
                   android:textColor="@color/white"
                   android:textSize="13sp"
                   android:text="您对内容的点评使我们无上喜悦"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/ll_like"
               android:background="@mipmap/neiron"
               android:layout_marginTop="4dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="110dp">
               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="25金币"
                       android:gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/tv_like"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="完成（1/5）"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="9dp"
                   android:textColor="@color/white"
                   android:textSize="24sp"
                   android:text="精彩点赞"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="7dp"
                   android:textColor="@color/white"
                   android:textSize="13sp"
                   android:text="为你喜爱的内容点赞，每天都有金币拿"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/ll_wefle"
               android:background="@mipmap/neiron"
               android:layout_marginTop="4dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="110dp">
               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginRight="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="100金币"
                       android:gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/tv_welafe"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:text="完成（1/5）"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <TextView
                   android:layout_marginTop="9dp"
                   android:textColor="@color/white"
                   android:textSize="24sp"
                   android:text="新人福利"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="7dp"
                   android:textColor="@color/white"
                   android:textSize="13sp"
                   android:text="我们为每一位新人都准备了一份豪礼哦"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>
   </com.ningchuang.youwuquan.view.StickyScrollView>



</LinearLayout>
