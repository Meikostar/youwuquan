<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ningchuang.youwuquan.ui.home.fragment.HomeFragment">

   <RelativeLayout
       android:background="@color/color_white"
       android:id="@+id/rll_home_top"
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:layout_alignParentTop="true"
       >
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:id="@+id/rll_home_local"
           >
           <ImageView
               android:id="@+id/iv_home_local"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_local"
               android:layout_marginLeft="5dp"
               android:layout_centerVertical="true"
               />
            <TextView
                android:id="@+id/tv_home_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳"
                android:layout_toRightOf="@id/iv_home_local"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="#808080"
                />
       </RelativeLayout>

       <LinearLayout
           android:layout_width="200dp"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:layout_centerHorizontal="true"
           >
            <RelativeLayout
                android:id="@+id/rll_home_wangh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_home_wangh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="网红"
                    android:textSize="16sp"
                    android:textColor="#f80378"
                    />
                <View
                    android:id="@+id/v_home_wangh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f80378"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rll_home_actor"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_home_actor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:textSize="16sp"
                   android:textColor="#000000"
                   android:text="演员"
                   />
               <View
                   android:id="@+id/v_home_actor"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rll_home_video"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_home_video"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:text="视频"
                   android:textSize="16sp"
                   android:textColor="#000000"
                   />
               <View
                   android:id="@+id/v_home_video"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   />
           </RelativeLayout>
       </LinearLayout>

       <ImageView
           android:id="@+id/iv_search"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:paddingRight="10dp"
           android:layout_alignParentRight="true"
           android:src="@mipmap/ic_search"
           android:paddingLeft="30dp"
           />
   </RelativeLayout>
   <FrameLayout
       android:id="@+id/fl_home"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/rll_home_top"
       >
   </FrameLayout>
</LinearLayout>
