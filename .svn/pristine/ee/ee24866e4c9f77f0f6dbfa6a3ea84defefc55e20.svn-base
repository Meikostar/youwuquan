<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_item3_image"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/icon_item3_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_item3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小只"
                android:textColor="#000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/time_item3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一个小时前"
                android:textSize="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/share_item3_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="分享" />

    </RelativeLayout>

    <TextView
        android:id="@+id/content_item3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="23dp"
        android:text="这个是纯文字的说说"
        android:textColor="#000"
        android:textSize="13dp" />

    <com.ningchuang.youwuquan.view.NinePic.NineGridPicView
        android:id="@+id/ninePic_item3_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="12dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/liskes_item3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@mipmap/like_none" />

        <TextView
            android:id="@+id/times_item3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/liskes_item3_image"
            android:text="520" />

        <ImageView
            android:id="@+id/message_item3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/times_item3_text"
            android:background="@mipmap/pinglun" />

        <TextView
            android:id="@+id/message_item3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/message_item3_image"
            android:text="520" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f4f4f4" />

</LinearLayout>