<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:ios="false"
    android:clickable="true"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >

    <RelativeLayout
        android:id="@+id/rll_message_notice"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:elevation="1dp"
        >

        <ImageView
            android:id="@+id/iv_message_gg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/message_unfocusedmessages"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_message_notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尤物圈公告"
            android:textColor="@color/black"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/normal_text_fourteen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尤物圈公告消息提醒"
            android:textColor="#868383"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="71dp"
            android:textSize="@dimen/normal_text_thirteen"
            />
        <TextView
            android:id="@+id/tv_message_notice_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尤物圈公告消息提醒"
            android:textColor="#868383"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="71dp"
            android:textSize="@dimen/normal_text_thirteen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09-09"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/normal_text_twelve"
            android:layout_marginTop="17dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33.5dp"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/normal_text_twelve"
            android:background="@drawable/shape_news_oval"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/normal_text_three"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="71dp"
        />
    </RelativeLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnTop"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#d9dee4"
        android:text="置顶"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textColor="@android:color/white"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>