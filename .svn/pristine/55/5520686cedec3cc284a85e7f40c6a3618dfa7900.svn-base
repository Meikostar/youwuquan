<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ningchuang.youwuquan.ui.me.activity.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@mipmap/login_bjt" />

    <android.support.v7.widget.CardView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="201dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/login_phone" />


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="请输入手机号码"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#F80378"
                    android:textSize="9sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e6e6e6" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/login_yzm" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:textSize="12sp" />


            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e6e6e6" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/signup_name" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请设置昵称"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/login_password" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请设置密码"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e6e6e6" />

            <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:textSize="8sp"
            android:text="注册即表明您已同意尤物圈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
            android:id="@+id/forget_agreenment"
            android:textColor="#F72F5E"
            android:textSize="8sp"
            android:text="《用户服务协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="注册"
                android:textColor="#fff" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="17dp"
                    android:text="已有账户,立即登录"
                    android:textColor="#F80378"
                    android:textSize="9sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
